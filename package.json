{
  "name": "signal-desktop-client",
  "version": "1.0.22",
  "description": "Signal Desktop Client",
  "main": "./out/main/index.js",
  "author": {
    "name": "Example person",
    "email": "example@mail.com"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck": "tsc --noEmit",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "tsc --noEmit && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux deb",
    "release": "cross-env NODE_ENV=development node change-package-channel.js && electron-forge publish",
    "release:prod": "npm version patch && cross-env NODE_ENV=production node change-package-channel.js && electron-forge publish",
    "helpers": "electron-packager . --platform linux --arch x64 --out dist/ --overwrite && electron-installer-debian --src dist/signal-desktop-client-linux-x64/ --dest dist/installers/ --arch amd64",
    "publish": "electron-builder --linux -p always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.2",
    "@electron-toolkit/utils": "^1.0.2",
    "@flashphoner/websdk": "^2.0.219",
    "@motionone/animation": "^10.13.1",
    "@motionone/dom": "^10.13.1",
    "@motionone/easing": "^10.13.1",
    "@motionone/utils": "^10.13.1",
    "axios": "^0.27.2",
    "centrifuge": "3.0.0",
    "framer-motion": "^6.3.8",
    "html-react-parser": "^1.4.14",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1",
    "rsuite": "^5.14.0",
    "socket.io-client": "^4.5.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@motionone/types": "^10.13.0",
    "@rushstack/eslint-patch": "^1.1.1",
    "@types/node": "16.11.22",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "7",
    "dotenv-webpack": "^7.1.0",
    "electron": "^17.3.1",
    "electron-builder": "^22.14.13",
    "electron-installer-debian": "^3.1.0",
    "electron-notarize": "^1.2.1",
    "electron-vite": "^1.0.2",
    "eslint": "^8.12.0",
    "eslint-plugin-vue": "^8.5.0",
    "less": "^4.1.2",
    "prettier": "^2.6.1",
    "typescript": "^4.5.5",
    "vite": "^2.9.1",
    "vue": "^3.2.31"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Dev Signal Desktop Client",
        "executableName": "dev-signal-desktop-client",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "dmitry-uknowme",
              "name": "signal-desktop-client"
            },
            "authToken": "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"
          }
        }
      ]
    }
  }
}
