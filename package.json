{
  "name": "signal-desktop-client",
  "author": "ETPP DEV",
  "version": "0.2",
  "description": "Signal Desktop Client",
  "main": "./.webpack/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run start\" \"npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "start": "node -r @babel/register ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electron -r ./.erb/scripts/babel-register ./src/main/main.ts",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config ./.erb/configs/webpack.config.renderer.dev.babel.js",
    "start:prod": "electron-forge start",
    "build:dll": "cross-env NODE_OPTIONS=--max_old_space_size=4096 NODE_ENV=development webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.babel.js",
    "package": "electron-forge package --platform=linux --arch=x64",
    "make-linux": "electron-forge make --platform=linux --arch=x64",
    "make-windows": "cd ./out/\"Signal Desktop Client-win32-x64\"/ && electron-installer-windows --src . --dest ../make/win",
    "release": "electron-forge publish",
    "lint": "eslint . --ext js,ts",
    "test": "jest"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "centrifuge": "^2.8.4",
    "date-fns": "^2.28.0",
    "framer-motion": "^5.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-loader": "4.13.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "5",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "rsuite": "^5.5.0",
    "styled-components": "5.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/helper-environment-visitor": "^7.16.7",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@babel/register": "^7.16.9",
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "@electron-forge/plugin-webpack": "6.0.0-beta.57",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "@types/react-router-dom": "5",
    "@types/styled-components": "5.1.10",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "babel-loader": "8.2.2",
    "concurrently": "^7.0.0",
    "core-js": "^3.20.3",
    "cross-env": "7.0.3",
    "css-loader": "^6.5.1",
    "detect-port": "^1.3.0",
    "dotenv": "^14.2.0",
    "dotenv-webpack": "^7.0.3",
    "electron": "13.1.2",
    "electron-installer-windows": "^3.0.0",
    "electron-is-dev": "^2.0.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "^6.2.0",
    "helmet": "^5.0.1",
    "jest": "27.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1",
    "react-refresh": "^0.11.0",
    "style-loader": "^3.3.1",
    "ts-jest": "27.0.3",
    "typescript": "4.3.4",
    "wait-on": "5.3.0",
    "webpack-cli": "^4.9.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Signal Desktop Client",
        "executableName": "signal-desktop-client",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "dmitry-uknowme",
              "name": "signal-desktop-client"
            },
            "authToken": "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",
            "draft": true
          }
        }
      ]
    }
  }
}
